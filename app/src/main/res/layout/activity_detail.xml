<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.DetailActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/detailstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Data"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtdetailsjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/detailsjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul text"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtdetailstanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pembuatan"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/detailstanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pembuatan text"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/txtdetailsdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/detailsdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi text"
            android:textSize="20sp"></TextView>
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:onClick="onUpdateButtonClick"/>
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:onClick="onDeleteButtonClick"/>
    </LinearLayout>
</LinearLayout>
